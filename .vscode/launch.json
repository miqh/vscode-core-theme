{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Desktop)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extensions",
        "--profile-temp"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/extension.desktop.cjs",
      ],
      "preLaunchTask": "build"
    },
    {
      "name": "Run Extension (Web)",
      "type": "extensionHost",
      "request": "launch",
      "debugWebWorkerHost": true,
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionDevelopmentKind=web",
        "--disable-extensions",
        "--profile-temp"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/extension.web.cjs",
      ],
      "preLaunchTask": "build",
    }
  ]
}
