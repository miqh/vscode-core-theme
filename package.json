{
    "name": "core-theme",
    "displayName": "Core Theme",
    "description": "Minimal environment aesthetics for maximum focus.",
    "keywords": [
        "vscode",
        "theme",
        "minimal",
        "focus"
    ],
    "version": "0.1.0",
    "author": "Michael Huynh",
    "publisher": "miqh",
    "license": "MIT",
    "homepage": "https://marketplace.visualstudio.com/items?itemName=miqh.core-theme",
    "repository": {
        "type": "git",
        "url": "https://github.com/miqh/vscode-core-theme.git"
    },
    "bugs": {
        "url": "https://github.com/miqh/vscode-core-theme/issues"
    },
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Themes"
    ],
    "contributes": {
        "commands": [
            {
                "command": "core-theme.create",
                "title": "Create Template",
                "category": "Core Theme"
            },
            {
                "command": "core-theme.edit",
                "title": "Edit Template",
                "category": "Core Theme"
            },
            {
                "command": "core-theme.generate",
                "title": "Generate Themes",
                "category": "Core Theme"
            },
            {
                "command": "core-theme.remove",
                "title": "Remove Template",
                "category": "Core Theme"
            }
        ],
        "themes": []
    },
    "activationEvents": [
        "onCommand:core-theme.create",
        "onCommand:core-theme.edit",
        "onCommand:core-theme.generate",
        "onCommand:core-theme.remove",
        "onLanguage:json"
    ],
    "main": "./dist/extension",
    "icon": "images/extension-icon.png",
    "qna": false,
    "scripts": {
        "build": "./node_modules/.bin/tsc -p .",
        "check": "./node_modules/.bin/tslint -p .",
        "watch": "./node_modules/.bin/tsc -watch -p .",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "vscode:prepublish": "npm run check && npm run build && node ./dist/prepublish"
    },
    "devDependencies": {
        "@types/node": "^10.5.2",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.18"
    }
}
