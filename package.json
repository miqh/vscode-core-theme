{
  "name": "core-theme",
  "displayName": "Core Theme",
  "description": "Minimal environment aesthetics for maximum focus.",
  "version": "0.6.2",
  "author": "Michael Huynh",
  "publisher": "miqh",
  "license": "MIT",
  "homepage": "https://marketplace.visualstudio.com/items?itemName=miqh.core-theme",
  "repository": {
    "type": "git",
    "url": "https://github.com/miqh/vscode-core-theme.git"
  },
  "bugs": {
    "url": "https://github.com/miqh/vscode-core-theme/issues"
  },
  "engines": {
    "node": "22.x",
    "vscode": "^1.107.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "configurable",
    "focus",
    "minimal"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "coreTheme.updateTemplate",
        "title": "Update Template",
        "category": "Core Theme",
        "enablement": "!isWeb && coreTheme.devOnly"
      }
    ],
    "configuration": {
      "title": "Core Theme",
      "properties": {
        "coreTheme.colorKeys": {
          "type": "object",
          "properties": {
            "b1": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "b2": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "b3": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "f1": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "f2": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "f3": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "f4": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "t1": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "t2": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            },
            "t3": {
              "type": "string",
              "pattern": "^#([0-9a-fA-F]{3,4}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})$",
              "patternErrorMessage": "Value must be a colour of the form #RGB, #RGBA, #RRGGBB or #RRGGBBAA."
            }
          },
          "additionalProperties": false,
          "default": {
            "b1": "#1f1f1f",
            "b2": "#2a2a2a",
            "b3": "#363636",
            "f1": "#c0c0c0",
            "f2": "#a0a0a0",
            "f3": "#808080",
            "f4": "#444444",
            "t1": "#c0c0c01a",
            "t2": "#c0c0c040",
            "t3": "#c0c0c05f"
          }
        }
      }
    },
    "themes": [
      {
        "id": "Core Theme",
        "label": "Core",
        "uiTheme": "vs-dark",
        "path": "./dist/core-theme.json",
        "_watch": true
      }
    ]
  },
  "main": "./dist/extension.desktop.js",
  "browser": "./dist/extension.web.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "icon": "./images/extension-icon.png",
  "qna": false,
  "scripts": {
    "build": "node ./build.mjs",
    "build:release": "node ./build.mjs --release",
    "check": "tsc --noEmit",
    "lint": "eslint",
    "vscode:prepublish": "npm run check && npm run lint && npm run build:release"
  },
  "dependencies": {
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.7.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.0"
  }
}
